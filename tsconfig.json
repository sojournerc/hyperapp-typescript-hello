{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "es6",
    "target": "es5",
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true

  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
